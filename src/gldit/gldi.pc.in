prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@
includedir = @includedir@
pluginsdir=@libdir@/@PACKAGE@
pluginsdatadir=@datadir@/@PACKAGE@/plug-ins

Name: gldi
Description: OpenGL Desktop Interface. A library to build eye-candy interfaces for the desktop (dock, panel, desklet, dialog, ...)
Requires: @gtk_required@ @packages_required@ @xextend_required@ @glitz_required@ @libgio_required@
Libs: -L${libdir} -lgldi
Cflags: -I${includedir}/cairo-dock -I${includedir}/cairo-dock/gldit -I${includedir}/cairo-dock/icon-factory -I${includedir}/cairo-dock/implementations
Version: @VERSION@
